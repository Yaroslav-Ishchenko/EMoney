<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:gwt="urn:import:com.google.gwt.user.client.ui" xmlns:g="urn:import:com.sun.org.apache.bcel.internal.generic"
	xmlns:em="urn:import:ua.ishchenko.client">
	<ui:style>
	.navigator {
		width: 99%;
		height: 100%;
		vertical-align: middle;
		text-align: center;
		background-color: #F5F5F5;
	}
	
	.outterdiv {
		width: 100%;
		height: 35px;
	}
	.center-layout{
		vertical-align: middle;
		text-align: center;
		background-color: #A5F5F5;
	}
	</ui:style>
	<gwt:DockLayoutPanel unit="PX">
		<gwt:north size="50">
			<gwt:HTMLPanel styleName="b-app-header">
				EMoney Sample Application with
				MVP and GWT 2.7.0
			</gwt:HTMLPanel>
		</gwt:north>

		<gwt:west size="200">
			<gwt:HTMLPanel styleName="{style.navigator}">
				<gwt:HTMLPanel styleName="{style.outterdiv}">
					<a id="wallets-view" href="#wallets:">Mails</a>
				</gwt:HTMLPanel>
				<gwt:HTMLPanel styleName="{style.outterdiv}">
					<a id="users-view" href="#users:">Contacts</a>
				</gwt:HTMLPanel>
				<gwt:HTMLPanel styleName="{style.outterdiv}">
					<a id="transactions-view" href="#transactions:">Tasks</a>
				</gwt:HTMLPanel>
			</gwt:HTMLPanel>

		</gwt:west>
		<gwt:center>
			<gwt:SimplePanel styleName="{style.center-layout}"
				ui:field="appContent" />
		</gwt:center>
	</gwt:DockLayoutPanel>

</ui:UiBinder>
 